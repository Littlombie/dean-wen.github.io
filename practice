<body>
    <div id="content">
        <div class="slidePic">
            <div class="slide onSlide"><img src="images/1.jpg"></div>
            <div class="slide"><img src="images/2.jpg"></div>
            <div class="slide"><img src="images/3.jpg"></div>
            <div class="slide"><img src="images/4.jpg"></div>
        </div>
        <div class="turn">
            <span class="prev"></span>
            <span class="next"></span>
        </div>
    </div>
    <div class="pager">
    </div>
</body>
<script src="http://apps.bdimg.com/libs/jquery/1.11.3/jquery.js"></script>
<script>
$(document).ready(function() {

    var slidePic = $('#content .slide');
    var num = slidePic.length;
    var i_munb = 0;
    var s = 0;
    var showed = true;
    document.title = num;
    function slideed() {
        if (i_munb == num - 1) {
            i_munb = -1;
        } else if (i_munb < num - 1) {
            slidePic.fadeOut(400);
            slidePic.eq(i_munb + 1).fadeIn(400);
            i_munb = i_munb + 1;
            document.title = i_munb;

        }
        setTimeout(slideed, 4000);
    };

    setTimeout(slideed, 4000);

    // 向左按钮
    $('.prev').click(function(){
        clearTimeout(slideed);
        slidePic.fadeOut(400);
        slidePic.eq(i_munb-1).fadeIn(400);
        prior();
        if (i_munb == -(num)){
            i_munb =  num;
        }
        document.title = i_munb;
    });
    // 向右按钮
    $('.next').click(function(event) {
        clearTimeout(slideed);
        slidePic.fadeOut(400);
        slidePic.eq(i_munb + 1).fadeIn(400);
        round();
        if (i_munb == num - 1){
            i_munb = -1;
        }
    });
    function prior(){
        i_munb = i_munb - 1;
    }
    function round(){
        i_munb = i_munb + 1;
    }
});
</script>

</html>
